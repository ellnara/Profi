@model IEnumerable<Profi.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Testimonials
                </h4>
                <a class="btn btn-success" asp-action="Create" >Create Testimonal</a>
                <div class="table-responsive" pt-3>
                    <table class="table table-dark>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Operation</th>
                                <th>Comment</th>
                                <th>Stars</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var testimonial in Model)
	{
		 <tr>
             <td>@count</td>
             <td><img src="~/admin/img/@testimonial.Url" /></td>
             <td>
                 <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@testimonial.Id"></a>
                 <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@testimonial.Url"></a>
             </td>
         </tr>
	}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>